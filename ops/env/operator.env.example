# Copy to: ops/env/operator.env
# Do not commit real secrets.
#
# Usage:
#   cp ops/env/operator.env.example ops/env/operator.env
#   # edit values
#   source scripts/load_operator_env.sh

# Deployed NG base URL (collapsed runtime or control-plane URL)
export BASE_URL="https://vozlia-ng.onrender.com"

# Tenant used for verification curls
export TENANT_ID="tenant_demo"

# Backend bearer auth (NG runtime auth contract)
export VOZ_OWNER_API_KEY="replace_owner_key"
export VOZ_ADMIN_API_KEY="replace_admin_key"

# WebUI proxy auth/env (only needed for local portal API checks)
export VOZLIA_CONTROL_BASE_URL="https://vozlia-ng.onrender.com"
export VOZLIA_ADMIN_KEY="replace_admin_key_or_proxy_key"
export NEXTAUTH_URL="http://localhost:3000"

# Optional: local session cookie for portal proxy curls
# export NEXTAUTH_SESSION_COOKIE="next-auth.session-token=replace_cookie"
